@using CafeMan_Project.Models.ViewModels

@section style {
    <link href="~/lib/bootstrap/css/bootstrap.css" rel="stylesheet" />
}
@model EditUserVM


<h1 style="margin-top:10px;">Edit User</h1>
<hr />

<form class="w-75" asp-action="EditUser" method="post">

    <input type="hidden" asp-for="Id" />

    <div class="form-group">
        <label asp-for="Email"></label>
        <input type="text" class="form-control" asp-for="Email" />
    </div>

    <div class="form-group">
        <label asp-for="CurrentPassword"></label>
        <input type="password" class="form-control" asp-for="CurrentPassword" />
    </div>

    <div class="form-group">
        <label>New Password</label>
        <input type="password" class="form-control" asp-for="Password" />
    </div>

    <div class="form-group">
        <label asp-for="RepeatPassword"></label>
        <input type="password" class="form-control" asp-for="RepeatPassword" name="RepeatPassword" />
    </div>

    <div class="py-2">
        <button type="submit" class="btn btn-primary">Update</button>
        <a asp-action="Info" class="btn btn-secondary">Return</a>
    </div>
</form>