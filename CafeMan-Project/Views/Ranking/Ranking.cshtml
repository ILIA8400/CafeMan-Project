            </div>
        </div>
    </div>
    <div class="box">
        <div class="ranks">

            @{
                var ranking = Model.OrderByDescending(c => c.Star).ToList();
                int rank = 1;
                var now = DateTime.Now;
            }


            @foreach(var item in ranking)
            {
                string isOpen = "";
               
                <div class="card">
                    <div class="dif">
                        <a asp-controller="Profile" asp-action="Profile" asp-route-q="@item.CafeId" class="title">
                            <p dir="rtl">@rank- @item.CafeName</p>
                        </a>
                        <div class="rate">
                            <div class="row1">
                                <samp><img width="20" height="20" src="https://img.icons8.com/color/48/star--v1.png" alt="star--v1" /><img width="20" height="20" src="https://img.icons8.com/color/48/star-half-empty.png" alt="star-half-empty" /><img width="20" height="20" src="https://img.icons8.com/fluency/48/star--v1.png" alt="star--v1" /><img width="20" height="20" src="https://img.icons8.com/fluency/48/star--v1.png" alt="star--v1" /><img width="20" height="20" src="https://img.icons8.com/fluency/48/star--v1.png" alt="star--v1" /><img width="20" height="20" src="https://img.icons8.com/fluency/48/star--v1.png" alt="star--v1" /></samp>
                                <samp>باز است</samp>
                            </div>
                            <div class="row2">
                                <samp>@item.Address</samp>  <samp>قیمت متوسط</samp>   <a class="menu"><img width="20" height="20" src="https://img.icons8.com/external-thin-kawalan-studio/24/external-arrow-up-right-arrows-thin-kawalan-studio.png" alt="external-arrow-up-right-arrows-thin-kawalan-studio" /><p>منو</p><img width="15" height="15" src="https://img.icons8.com/ios/50/restaurant-menu.png" alt="restaurant-menu" /></a>
                            </div>
                        </div>
                        <br>
                        <hr style="text-align: center; width: 490px;">
                        <div class="des">
                            <a>@item.CafeDescription     <img style="margin-top: 10px;" width="15" height="15" src="https://img.icons8.com/ios/50/info--v1.png" alt="info--v1" /></a>
                        </div>
                    </div>
                    <a href="" class="image image1"></a>
                </div>

                rank = rank +1;
            }



            <div class="card">
                <div class="dif">
                    <a class="title">
                        <p dir="rtl">2- کافه اننی</p>
                    </a>
                    <div class="rate">
                        <div class="row1">
                            <samp><img width="20" height="20" src="https://img.icons8.com/color/48/star--v1.png" alt="star--v1" /><img width="20" height="20" src="https://img.icons8.com/color/48/star-half-empty.png" alt="star-half-empty" /><img width="20" height="20" src="https://img.icons8.com/fluency/48/star--v1.png" alt="star--v1" /><img width="20" height="20" src="https://img.icons8.com/fluency/48/star--v1.png" alt="star--v1" /><img width="20" height="20" src="https://img.icons8.com/fluency/48/star--v1.png" alt="star--v1" /><img width="20" height="20" src="https://img.icons8.com/fluency/48/star--v1.png" alt="star--v1" /></samp>
                            <samp>باز است</samp>
                        </div>
                        <div class="row2">
                            <samp>تهران-ابوذر</samp>  <samp>قیمت متوسط</samp>   <a class="menu"><img width="20" height="20" src="https://img.icons8.com/external-thin-kawalan-studio/24/external-arrow-up-right-arrows-thin-kawalan-studio.png" alt="external-arrow-up-right-arrows-thin-kawalan-studio" /><p>منو</p><img width="15" height="15" src="https://img.icons8.com/ios/50/restaurant-menu.png" alt="restaurant-menu" /></a>
                        </div>
                    </div>
                    <br>
                    <hr style="text-align: center; width: 490px;">
                    <div class="des">
                        <a>لورم ایپسوم متن ساختگی با تولید سادگی نامفهوم از صنعت چاپ لورم ایپسوم متن ساختگی با تولید سادگی نامفهوم از صنعت چاپ.     <img style="margin-top: 10px;" width="15" height="15" src="https://img.icons8.com/ios/50/info--v1.png" alt="info--v1" /></a>
                    </div>
                </div>
                <a href="" class="image image1"></a>
            </div>




        </div>



